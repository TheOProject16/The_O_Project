<div class="wrap">
  <h1>Flashkarten-Quiz: Fahrr√§der</h1>
  <p><strong>Infotext:</strong><br>
  Das Fahrrad ist ein praktisches Verkehrsmittel. Es besteht aus zwei R√§dern, Rahmen, Lenker, Pedalen und meist einer Kette. Mit den Pedalen bewegt man das Hinterrad. Viele R√§der haben G√§nge, die bergauf helfen oder auf gerader Strecke schneller machen. Fahrr√§der sind umweltfreundlich, da sie keinen Kraftstoff brauchen und keine Abgase erzeugen. Sie machen fit und Spa√ü. Kinder nutzen sie f√ºr Schule, Freunde oder Ausfl√ºge. Wichtig f√ºr Sicherheit sind Helm, funktionierende Bremsen und Licht im Dunkeln.
  </p>

  <div class="card">
    <div class="q" id="question"></div>
    <div id="options" class="options"></div>
    <div class="controls">
      <button class="btn secondary" id="prevBtn">Zur√ºck</button>
      <button class="btn" id="nextBtn">Weiter</button>
    </div>
    <div class="status" id="status"></div>
  </div>
</div>

<script>
// --- Quizfragen ---
let cards = [
  {
    q: "Welche Grundteile geh√∂ren zu einem Fahrrad?",
    choices: [
      "Zwei R√§der, Lenker, Pedale, Rahmen",
      "Motor, Tank, Auspuff",
      "Fenster, T√ºr, Dach",
      "Fernseher, Sofa, Lampe"
    ],
    correct: 0
  },
  {
    q: "Wozu dienen die G√§nge am Fahrrad?",
    choices: [
      "Zum Einschalten des Lichts",
      "Zum leichteren Bergauffahren oder schneller Fahren auf der Ebene",
      "Zum Bremsen",
      "Zum Klingeln"
    ],
    correct: 1
  },
  {
    q: "Warum ist Radfahren umweltfreundlich?",
    choices: [
      "Weil Fahrr√§der bunt sind",
      "Weil sie keinen Kraftstoff brauchen und keine Abgase erzeugen",
      "Weil sie schweben k√∂nnen",
      "Weil sie kleiner als Autos sind"
    ],
    correct: 1
  },
  {
    q: "Wof√ºr nutzen Kinder das Fahrrad h√§ufig?",
    choices: [
      "Zum Hausaufgabenmachen",
      "Zum Schwimmen",
      "Um zur Schule zu fahren, Freunde zu besuchen oder Ausfl√ºge zu machen",
      "Zum Kochen"
    ],
    correct: 2
  },
  {
    q: "Was ist wichtig f√ºr die Sicherheit beim Radfahren?",
    choices: [
      "Helm tragen, Bremsen pr√ºfen, Licht/Reflektoren nutzen",
      "Nur bergab fahren",
      "Ohne H√§nde lenken",
      "Sehr laute Musik h√∂ren"
    ],
    correct: 0
  }
];

// --- Zuf√§llige Reihenfolge (Shuffle) ---
cards = cards
  .map(value => ({ value, sort: Math.random() }))
  .sort((a, b) => a.sort - b.sort)
  .map(({ value }) => value);

// --- State ---
let idx = 0;
let score = 0;
let answered = Array(cards.length).fill(false);

// --- DOM ---
const qEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const statusEl = document.getElementById("status");

function renderCard() {
  const c = cards[idx];
  qEl.textContent = c.q;
  optionsEl.innerHTML = "";
  c.choices.forEach((choice, i) => {
    const btn = document.createElement("div");
    btn.textContent = choice;
    btn.className = "opt";
    btn.addEventListener("click", () => checkAnswer(btn, i));
    optionsEl.appendChild(btn);
  });
  statusEl.textContent = `Frage ${idx+1} von ${cards.length} | Punkte: ${score}`;
}

function checkAnswer(btn, choiceIndex) {
  if (answered[idx]) return;
  const c = cards[idx];
  if (choiceIndex === c.correct) {
    btn.classList.add("correct");
    score++;
  } else {
    btn.classList.add("incorrect");
    optionsEl.children[c.correct].classList.add("correct");
  }
  answered[idx] = true;
  statusEl.textContent = `Frage ${idx+1} von ${cards.length} | Punkte: ${score}`;
}

document.getElementById("nextBtn").addEventListener("click", () => {
  if (idx < cards.length-1) {
    idx++;
    renderCard();
  } else {
    qEl.textContent = "Quiz beendet üéâ";
    optionsEl.innerHTML = "";
    statusEl.textContent = `Endpunktzahl: ${score} von ${cards.length}`;
  }
});
document.getElementById("prevBtn").addEventListener("click", () => {
  if (idx > 0) { idx--; renderCard(); }
});

renderCard();
</script>
